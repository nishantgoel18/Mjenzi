    <div class="breadcrumb-area bg-img bg-black-overlay section_padding_130" style="background-image: url('<%= image_path("apland/bg-img/testimonials.jpg") %>');">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-sm-9 col-xl-6">
            <div class="breadcrumb-content text-center">
              <h2>Categories | <%= @category.name %></h2>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Blog Area-->
    <div class="apland-blog-area section_padding_130">
      <div class="container">
        <div class="row justify-content-between">
          <%= render partial: 'sidebar' %>
          <div class="col-12 col-md-7">

          <% if @category.blogs.present? %>  
            <!-- Single Blog Post Area-->
            <% @category.blogs.each do |blog| %>
            <div class="single-blog-post mb-5">
              <div class="post-date"><%= blog.created_at.strftime("%b %d, %Y") %></div><a class="post-title" href="<%= blogs_path(blog.slug) %>"><%= blog.title %></a><img class="post-thumbnail" src="<%= image_path(blog.image) %>" alt="">
              <div class="post-meta"><a class="post-author" href=""><%= blog.author_name %></a><a class="post-tutorial" href="<%= category_path(blog.category.slug) %>"><%= blog.category.name %></a></div>
              <p><%= blog.body %></p><a class="btn apland-btn mt-3" href="<%= blog_path(blog.slug) %>">Continue Reading</a>
            </div>
            <% end %>
          <% else %>
            <h2>No blogs found!</h2>
          <% end %>    
