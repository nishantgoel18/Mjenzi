<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @admin_categories.each do |admin_category| %>
      <tr>
        <td width="70%"><%= admin_category.name %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(admin_category) %> | <%= link_to 'Destroy', admin_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-success' %>
